@model List<UserInfo>
@{
    ViewBag.Title="Toplantıya Katılım Listesi";

}
<main class="text-center"> 
<h1 class="h4">Toplantıya Katılım Listesi</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <td>Ad</td>
            <td>Katılım Durumu</td>
            <td></td>
        </tr>
    </thead>
    <tbody>
        @{int i=0;}
        @foreach(var user in Model ){  
        
            var durum=user.WillAttend==true ? "Evet":"Hayır";
            var className=user.WillAttend==true ? "table-success":"table-danger";
            if(user.WillAttend==true){
                i++;
            }
             <tr class="@className">
            <td>@user.Name</td>
            <td>@durum</td>
            <td>
                <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
            </td>
        </tr>
      }
    </tbody>
</table>
<div class="card" style="background:rgb(16, 228, 147)">
    <div class="card-body">
        <p class="text-black">Katılımcı Sayısı: @i </p>
    </div>
</div>
<br>
<a class="btn btn-lg btn-primary" href="/Home/Index">Anasayfaya Dön</a>
</main>