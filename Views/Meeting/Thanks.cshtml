@model UserInfo
@{
    ViewBag.Title="Başvuru Durumu";

}
<main class="text-center">
<h1 class="h4">Başvuru Durumu</h1>

@if(Model.WillAttend==true){

<p>Teşekkürler, @Model.Name toplantıya sizinle birlikte @ViewBag.UserCount kişi katılıyor</p>
<a class="btn btn-md btn btn-outline-primary" href="/Meeting/list">Katılımcılrı Listele</a>

}
else{
   <p>@Model.Name, katılmadğınndan dolayı üzgünüz</p>
   <a class="btn btn-md btn btn-outline-primary" href="/Meeting/apply">Başvuru Formu</a>
}


 </main>